{% render 'vite-tag' with 'main-collection.js' %}
{% render 'vite-tag' with 'main-collection.scss' %}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-wrapper section-{{ section.id }}-padding">
  <div class="section-header">
    <h2>{{ section.settings.header }}</h2>
    <p>{{ section.settings.description }}</p>
  </div>
  <div class="product-grid-container">
    {% for product in collections[section.settings.products].products %}
      {% render 'card-product-test'
        , product: product %}
    {% endfor %}
  </div>
  <div class="section-footer">
    <a href="{{ collections[section.settings.products].url }}" class="section-button">{{ section.settings.button_text }}</a>
  </div>
</div>

{% schema %}
  {
    "name": "main-collection-test",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "header",
        "label": "Section Header",
        "default": "Featured Products"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Section Description",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      },
      {
        "type": "collection",
        "id": "products",
        "label": "Featured Products Collection"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "View All"
      }
    ],
    "presets": [
      {
        "name": "Main Collection Test"
      }
    ]
  }
{% endschema %}